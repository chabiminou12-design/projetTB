@{
    Layout = null;
    ViewData["Title"] = "Mot de passe oublié";
}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <style>
        body {
            background: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }

        .card {
            max-width: 400px;
            width: 100%;
            border: none;
            shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        .btn-primary {
            background-color: #074d6d;
            border-color: #074d6d;
        }
    </style>
</head>
<body>
    <div class="card shadow-lg">
        <div class="card-body p-5 text-center">
            <h4 class="mb-3">Accès à la réinitialisation</h4>
            <p class="text-muted mb-4">Entrez votre adresse email pour vérifier votre compte.</p>

            <form asp-action="VerifyEmail" method="post">
                <div class="form-floating mb-3">
                    <input type="email" name="email" class="form-control" id="emailInput" placeholder="name@example.com" required>
                    <label for="emailInput">Adresse Email</label>
                </div>

                @if (ViewData["Error"] != null)
                {
                    <div class="alert alert-danger">@ViewData["Error"]</div>
                }

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Vérifier</button>
                    <a asp-action="Login" class="btn btn-outline-secondary">Retour au Login</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>