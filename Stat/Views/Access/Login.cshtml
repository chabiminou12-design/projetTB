@model Stat.Models.User
@{
    Layout = null;
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tableau de Bord</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <style>
        :root {
            --bs-primary-rgb: 7, 77, 109;
        }

        body {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            background: linear-gradient(90deg, rgba(1, 142, 145, 1) 0%, rgba(7, 182, 128, 1) 50%, rgba(1, 155, 117, 1) 100%, rgba(1, 144, 140, 1) 100%);
        }

        .login-card {
            width: 100%;
            max-width: 450px;
            padding: 2.5rem;
            border: none;
            border-radius: 0.75rem;
            box-shadow: 0 8px 30px rgba(0,0,0,0.1);
        }
    </style>
</head>
<body>
    <div class="card login-card">
        <div class="card-body text-center">
            <img src="~/assets/img/logoimpot.jpg" alt="Logo" style="width: 120px; height: 100px; margin-bottom: 10px;" />
            <h3 class="card-title mb-2">Login Tableau de Bord</h3>
            <p class="text-muted mb-4">Veuillez saisir vos identifiants.</p>
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
                    @TempData["SuccessMessage"]

                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <form asp-controller="Access" asp-action="Login" method="post">

                <div style="display:none; opacity:0; visibility:hidden;">
                    <label for="Confirm_Email_Address">Please leave this blank</label>
                    <input type="text" id="Confirm_Email_Address" name="Confirm_Email_Address" autocomplete="off" tabindex="-1">
                </div>
                <div class="form-floating mb-3">
                    <input class="form-control" id="User_name" type="text" placeholder="Nom Utilisateur ou Mail..." asp-for="User_name" required />
                    <label for="User_name">Nom Utilisateur ou Mail</label>
                </div>
                <div class="form-floating mb-3">
                    <input class="form-control" id="Password" type="password" placeholder="Mot de Passe..." asp-for="Password" required />
                    <label for="Password">Mot de Passe</label>
                </div>

                <div class="form-check text-start my-3">
                    <input class="form-check-input" type="checkbox" id="KeepLoggedIn" asp-for="KeepLoggedIn">
                    <label class="form-check-label" for="KeepLoggedIn">
                        Se souvenir de moi
                    </label>
                </div>
                <div class="text-end mb-3">
                    <a asp-controller="Access" asp-action="ForgotPassword" class="text-decoration-none" style="color: #074d6d;">
                        Mot de passe oublié ?
                    </a>
                </div>
                @if (ViewData["ValidateMessage"] != null)
                {
                    <div class="alert alert-danger text-center p-2 mt-3">@ViewData["ValidateMessage"]</div>
                }

                <div class="d-grid mt-4">
                    <button class="btn btn-primary btn-lg" type="submit">Login</button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>