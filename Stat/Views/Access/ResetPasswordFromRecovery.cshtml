@model Stat.Models.ResetPasswordViewModel
@{
    Layout = null;
    ViewData["Title"] = "Nouveau mot de passe";
}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <title>Réinitialisation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <style>
        body {
            background: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }

        .card {
            max-width: 400px;
            width: 100%;
        }

        .btn-primary {
            background-color: #074d6d;
            border-color: #074d6d;
        }
    </style>
</head>
<body>
    <div class="card shadow-lg">
        <div class="card-body p-5">
            <h4 class="text-center mb-4">Réinitialisation du mot de passe</h4>

            <form asp-action="ResetPasswordConfirm" method="post">
                @* On cache l'ID de l'utilisateur ici pour le renvoyer au contrôleur *@
                <input type="hidden" asp-for="UserId" />

                <div class="form-floating mb-3">
                    <input asp-for="NewPassword" class="form-control" placeholder="Nouveau mot de passe" />
                    <label asp-for="NewPassword">Nouveau mot de passe</label>

                    <div class="form-text text-start text-muted">
                        **Exigences :** 9+ caractères, une majuscule, un chiffre, et un symbole.
                    </div>

                    <span asp-validation-for="NewPassword" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirmer" />
                    <label asp-for="ConfirmPassword">Confirmer le mot de passe</label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Mettre à jour</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>