@{
    // Cast the ViewBag data to their specific types
    var situation = ViewBag.Situation as Stat.Models.Situation;
    var indicators = ViewBag.Indicators as List<Stat.Models.Indicateurs_DE_PERFORMANCE_OPERATIONNELS>;
    var declarations = ViewBag.Declarations as Dictionary<int, Stat.Models.DeclarationDRI>;

    ViewData["Title"] = $"Consultation: {situation.Month} {situation.Year}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewData["Title"]</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="SaisieIndicateurs">Gestion des Situations</a></li>
        <li class="breadcrumb-item active">Consultation</li>
    </ol>

    <div class="card">
        <div class="card-header bg-info text-white">
            <i class="fas fa-eye me-1"></i>
            Détails des Indicateurs de Performance Opérationnels DRI
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-bordered table-striped mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 40%;">Indicateur</th>
                            <th class="text-center">Numérateur</th>
                            <th class="text-center">Dénominateur</th>
                            <th class="text-center">Taux (%)</th>
                            <th class="text-center">Cible (%)</th>
                            <th class="text-center">Écart</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var indicator in indicators)
                        {
                            // Get the confirmed declaration data for the current indicator
                            var decl = declarations?.GetValueOrDefault(indicator.IdIndicacteur);

                            <tr>
                                <td><strong>@indicator.IntituleIn</strong></td>
                                <td class="text-center">@decl?.Numerateur?.ToString("N0")</td>
                                <td class="text-center">@decl?.Denominateur?.ToString("N0")</td>
                                <td class="text-center">@decl?.taux?.ToString("F2")</td>
                                <td class="text-center">@decl?.Cible?.ToString("F2")</td>
                                <td class="text-center">@decl?.ecart?.ToString("F2")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="SaisieIndicateurs" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Retour à la liste
        </a>
    </div>
</div>