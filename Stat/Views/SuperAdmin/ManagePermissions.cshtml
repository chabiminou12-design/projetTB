@model Stat.Models.ViewModels.ManagePermissionsViewModel
@{
    ViewData["Title"] = "Gérer les Permissions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Gérer les Permissions</h1>
    <h4 class="text-muted">pour @Model.AdminName</h4>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="ListAdmins">Gérer les Administrateurs</a></li>
        <li class="breadcrumb-item active">Modifier les Permissions</li>
    </ol>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <div class="card">
        <div class="card-body">
            <form method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="AdminId" />
                <input type="hidden" asp-for="AdminName" />

                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Permission</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.AssignedPermissions.Count; i++)
                        {
                            <tr>
                                <td style="width: 250px;">
                                    <input type="hidden" asp-for="AssignedPermissions[i].PermissionId" />
                                    <input type="hidden" asp-for="AssignedPermissions[i].Description" />
                                    <div class="form-check form-switch fs-5">
                                        <input class="form-check-input" type="checkbox" role="switch" asp-for="AssignedPermissions[i].IsAssigned">
                                        <label class="form-check-label" asp-for="AssignedPermissions[i].IsAssigned">
                                            @Model.AssignedPermissions[i].PermissionId
                                        </label>
                                    </div>
                                </td>
                                <td>@Model.AssignedPermissions[i].Description</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
                    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
                </div>
            </form>
        </div>
    </div>
</div>