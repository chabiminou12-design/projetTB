@model Stat.Models.ViewModels.EditIndicateurOpsViewModel
@{
    ViewData["Title"] = "Modifier l'Indicateur Opérationnel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewData["Title"]</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="ListIndicateursOps">Liste des Indicateurs Opérationnels</a></li>
        <li class="breadcrumb-item active">Modifier</li>
    </ol>

    <div class="card">
        <div class="card-body">
            <form asp-action="EditIndicateurOps" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="Indicateur.IdIn" />

                <div class="mb-3">
                    <label class="form-label">ID de l'Indicateur</label>
                    <input class="form-control" value="@Model.Indicateur.IdIn" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="Indicateur.IntituleIn" class="form-label">Intitulé</label>
                    <input asp-for="Indicateur.IntituleIn" class="form-control" />
                    <span asp-validation-for="Indicateur.IntituleIn" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Indicateur.IdCategIn" class="form-label">Axe (Catégorie)</label>
                    <select asp-for="Indicateur.IdCategIn" asp-items="Model.AxeOptions" class="form-select"></select>
                    <span asp-validation-for="Indicateur.IdCategIn" class="text-danger"></span>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
                    <a asp-action="ListIndicateursOps" class="btn btn-secondary">Annuler</a>
                </div>
            </form>
        </div>
    </div>
</div>