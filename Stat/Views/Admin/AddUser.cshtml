@model Stat.Models.ViewModels.AddUserViewModel
@{
    ViewData["Title"] = "Ajouter un Utilisateur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .card-link .card {
        transition: transform .2s ease-in-out, box-shadow .2s ease-in-out;
    }

    .card-link:hover .card {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }
</style>

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewData["Title"]</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="listuser">Gestion des Utilisateurs</a></li>
        <li class="breadcrumb-item active">Choisir un type</li>
    </ol>

    <p class="lead">Sélectionnez le type de profil utilisateur que vous souhaitez créer :</p>

    <div class="row g-4 mt-2">
        <div class="col-md-6 col-lg-4">
            <a asp-action="AddUserForm" asp-route-userType="DIW" class="text-decoration-none card-link">
                <div class="card bg-primary text-white text-center h-100">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center">
                        <i class="fas fa-user-tie fa-3x mb-3"></i>
                        <h4 class="card-title">Utilisateur DIW</h4>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-6 col-lg-4">
            <a asp-action="AddUserForm" asp-route-userType="DRI" class="text-decoration-none card-link">
                <div class="card bg-success text-white text-center h-100">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center">
                        <i class="fas fa-user-shield fa-3x mb-3"></i>
                        <h4 class="card-title">Utilisateur DRI</h4>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-6 col-lg-4">
            <a asp-action="AddUserForm" asp-route-userType="DC" class="text-decoration-none card-link">
                <div class="card bg-info text-white text-center h-100">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center">
                        <i class="fas fa-landmark fa-3x mb-3"></i>
                        <h4 class="card-title">Utilisateur DC</h4>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>