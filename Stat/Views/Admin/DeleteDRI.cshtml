@model Stat.Models.ViewModels.DeleteDriViewModel
@{
    ViewData["Title"] = "Supprimer DRI et Réassigner les DIWs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewData["Title"]</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="listdri">Liste des DRIs</a></li>
        <li class="breadcrumb-item active">Supprimer</li>
    </ol>

    <div class="alert alert-danger">
        <h4><i class="fas fa-exclamation-triangle me-2"></i>Action Irréversible</h4>
        Vous êtes sur le point de supprimer la DRI <strong>@Model.DriToDelete.LibelleDRI</strong>.
        Pour continuer, vous devez réassigner toutes les DIWs ci-dessous à une autre DRI.
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="DeleteDRI" method="post">
                <input type="hidden" asp-for="DriToDelete.CodeDRI" />
                <table class="table">
                    <thead><tr><th>DIW à Réassigner</th><th>Nouvelle DRI Parente</th></tr></thead>
                    <tbody>
                        @foreach (var diw in Model.DiwsToReassign)
                        {
                            <tr>
                                <td>@diw.LibelleDIW (@diw.CodeDIW)</td>
                                <td>
                                    <select name="DiwReassignments[@diw.CodeDIW]" class="form-select" required>
                                        <option value="">-- Choisissez une nouvelle DRI --</option>
                                        @foreach (var driOption in Model.OtherDris)
                                        {
                                            <option value="@driOption.Value">@driOption.Text</option>
                                        }
                                    </select>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <hr />
                <button type="submit" class="btn btn-danger w-100">Confirmer la Réassignation et la Suppression</button>
            </form>
        </div>
    </div>
</div>