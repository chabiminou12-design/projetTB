@model Stat.Models.ViewModels.AddIndicateurOpsViewModel
@{
    ViewData["Title"] = "Ajouter un Indicateur Opérationnel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewData["Title"]</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="ListIndicateursOps">Liste des Indicateurs Opérationnels</a></li>
        <li class="breadcrumb-item active">Ajouter</li>
    </ol>

    <div class="card">
        <div class="card-body">
            <form asp-action="AddIndicateurOps" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Indicateur.IdCategIn" class="form-label">Axe (Catégorie)</label>
                    <select asp-for="Indicateur.IdCategIn" asp-items="Model.Categories" class="form-select" required>
                        <option value="">-- Sélectionner une catégorie --</option>
                    </select>
                    <span asp-validation-for="Indicateur.IdCategIn" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Indicateur.IntituleIn" class="form-label">Intitulé</label>
                    <input asp-for="Indicateur.IntituleIn" class="form-control" required/>
                    <span asp-validation-for="Indicateur.IntituleIn" class="text-danger"></span>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Créer l'Indicateur</button>
                    <a asp-action="ListIndicateursOps" class="btn btn-secondary">Annuler</a>
                </div>
            </form>
        </div>
    </div>
</div>