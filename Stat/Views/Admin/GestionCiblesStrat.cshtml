@model Stat.Models.ViewModels.GestionCiblesStratViewModel
@{
    ViewData["Title"] = "Gestion des Cibles Stratégiques";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int startYear = int.Parse(Model.SelectedYear ?? DateTime.Now.Year.ToString());
}

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewData["Title"]</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index">Tableau de bord</a></li>
        <li class="breadcrumb-item active">Cibles Stratégiques</li>
    </ol>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header"><i class="fas fa-filter me-1"></i> Sélectionner l'Année de Début</div>
        <div class="card-body">
            <form method="get" id="yearSelectionForm">
                <div class="row align-items-end">
                    <div class="col-md-4">
                        <label asp-for="SelectedYear" class="form-label">Année de Début</label>
                        <select asp-for="SelectedYear" asp-items="Model.YearOptions" class="form-select" onchange="document.getElementById('yearSelectionForm').submit();"></select>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <i class="fas fa-bullseye me-1"></i> Mettre à jour les cibles pour la période <strong>@startYear - @(startYear + 2)</strong>
        </div>
        <div class="card-body">
            <form method="post" asp-action="GestionCiblesStrat">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="SelectedYear" />

                <div class="table-responsive">
                    <table class="table table-bordered table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Axe</th>
                                <th>Objectif</th>
                                <th>Indicateur</th>
                                <th style="width: 12%; text-align:center;">@startYear (%)</th>
                                <th style="width: 12%; text-align:center;">@(startYear + 1) (%)</th>
                                <th style="width: 12%; text-align:center;">@(startYear + 2) (%)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Cibles.Count; i++)
                            {
                                <tr>
                                    <input type="hidden" asp-for="@Model.Cibles[i].IdIndic" />
                                    <td>@Model.Cibles[i].AxeName</td>
                                    <td>@Model.Cibles[i].ObjectifName</td>
                                    <td>@Model.Cibles[i].IntituleIn</td>

                                    <td>
                                        <input type="hidden" asp-for="@Model.Cibles[i].IdCible1" />
                                        <input asp-for="@Model.Cibles[i].Cible1" class="form-control text-center" type="number" step="0.01" />
                                    </td>
                                    <td>
                                        <input type="hidden" asp-for="@Model.Cibles[i].IdCible2" />
                                        <input asp-for="@Model.Cibles[i].Cible2" class="form-control text-center" type="number" step="0.01" />
                                    </td>
                                    <td>
                                        <input type="hidden" asp-for="@Model.Cibles[i].IdCible3" />
                                        <input asp-for="@Model.Cibles[i].Cible3" class="form-control text-center" type="number" step="0.01" />
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="mt-3 text-end">
                    <button type="submit" class="btn btn-primary btn-lg"><i class="fas fa-save me-2"></i>Enregistrer les modifications</button>
                </div>
            </form>
        </div>
    </div>
</div>