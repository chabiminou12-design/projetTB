@model Stat.Models.ViewModels.GestionCiblesDriViewModel
@{
    ViewData["Title"] = "Gestion des Cibles DRI";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int startYear = 0;
    int.TryParse(Model.SelectedYear, out startYear);
}

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewData["Title"]</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index">Tableau de bord</a></li>
        <li class="breadcrumb-item active">Cibles DRI</li>
    </ol>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header"><i class="fas fa-filter me-1"></i> Filtres de Sélection</div>
        <div class="card-body">
            <form method="get" id="selectForm">
                <div class="row align-items-end">
                    <div class="col-md-6">
                        <label class="form-label">Direction Régionale (DRI)</label>
                        <select asp-for="SelectedDriCode" asp-items="Model.DriOptions" class="form-select form-select-lg" onchange="this.form.submit()">
                            <option value="">-- Choisir une DRI --</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Année de Début</label>
                        <select asp-for="SelectedYear" asp-items="Model.YearOptions" class="form-select form-select-lg" onchange="this.form.submit()"></select>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.SelectedDriCode) && startYear > 0 && Model.CiblesRows.Any())
    {
        <div class="card animated-fade-in">
            <div class="card-header">
                <i class="fas fa-bullseye me-1"></i>
                Édition des cibles pour la période <strong>@startYear - @(startYear + 2)</strong>
            </div>
            <div class="card-body">
                <form method="post" asp-action="GestionCiblesDri">
                    <input type="hidden" asp-for="SelectedDriCode" />
                    <input type="hidden" asp-for="SelectedYear" />

                    <div class="table-responsive">
                        <table class="table table-hover table-bordered align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 40%;">Indicateur</th>
                                    <th style="width: 20%; text-align:center;">@startYear (%)</th>
                                    <th style="width: 20%; text-align:center;">@(startYear + 1) (%)</th>
                                    <th style="width: 20%; text-align:center;">@(startYear + 2) (%)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.CiblesRows.Count; i++)
                                {
                                    <tr>
                                        <input type="hidden" asp-for="CiblesRows[i].IdIndicacteur" />
                                        <input type="hidden" asp-for="CiblesRows[i].IntituleIndicateur" />

                                        <td class="fw-bold text-secondary">@Model.CiblesRows[i].IntituleIndicateur</td>

                                        <td>
                                            <input type="hidden" asp-for="CiblesRows[i].IdCible1" />
                                            <div class="input-group">
                                                <input type="number" step="0.01" class="form-control fw-bold text-center" asp-for="CiblesRows[i].ValCible1" />
                                                <span class="input-group-text">%</span>
                                            </div>
                                        </td>
                                        <td>
                                            <input type="hidden" asp-for="CiblesRows[i].IdCible2" />
                                            <div class="input-group">
                                                <input type="number" step="0.01" class="form-control fw-bold text-center" asp-for="CiblesRows[i].ValCible2" />
                                                <span class="input-group-text">%</span>
                                            </div>
                                        </td>
                                        <td>
                                            <input type="hidden" asp-for="CiblesRows[i].IdCible3" />
                                            <div class="input-group">
                                                <input type="number" step="0.01" class="form-control fw-bold text-center" asp-for="CiblesRows[i].ValCible3" />
                                                <span class="input-group-text">%</span>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="mt-4 text-end">
                        <button type="submit" class="btn btn-primary btn-lg"><i class="fas fa-save me-2"></i> Enregistrer les modifications</button>
                    </div>
                </form>
            </div>
        </div>
    }
</div>