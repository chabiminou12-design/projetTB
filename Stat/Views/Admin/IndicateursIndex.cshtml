@{
    ViewData["Title"] = "Gestion des Indicateurs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .card-link .card {
        transition: transform .2s ease-in-out, box-shadow .2s ease-in-out;
    }

    .card-link:hover .card {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }
</style>

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewData["Title"]</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index">Tableau de bord</a></li>
        <li class="breadcrumb-item active">Choisir un type d'indicateur</li>
    </ol>

    <p class="lead">Sélectionnez le type d'indicateur que vous souhaitez gérer :</p>

    <div class="row g-4 mt-2">
        <div class="col-md-6 col-lg-4">
            <a asp-action="ListIndicateursOps" class="text-decoration-none card-link">
                <div class="card bg-primary text-white text-center h-100">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center">
                        <i class="fas fa-cogs fa-3x mb-3"></i>
                        <h4 class="card-title">Indicateurs Opérationnels</h4>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-6 col-lg-4">
            <a asp-action="ListIndicateursStrat" class="text-decoration-none card-link">
                <div class="card bg-success text-white text-center h-100">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center">
                        <i class="fas fa-sitemap fa-3x mb-3"></i>
                        <h4 class="card-title">Indicateurs Stratégiques</h4>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>