@model IEnumerable<Stat.Models.ViewModels.ListIndicateurStratViewModel>
@{
    ViewData["Title"] = "Indicateurs Stratégiques";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewData["Title"]</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index">Tableau de bord</a></li>
        <li class="breadcrumb-item active">Liste des Indicateurs Stratégiques</li>
    </ol>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button></div>
    }

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Liste des Indicateurs</h5>
            <a asp-action="AddIndicateurStrat" class="btn btn-primary btn-sm">
                <i class="fas fa-plus"></i> Ajouter un Indicateur
            </a>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Axe (Catégorie)</th>
                        <th>Objectif</th>
                        <th>Intitulé</th>
                        <th>Cible (@DateTime.Now.Year)</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IdIndic</td>
                            <td>@item.AxeName</td>
                            <td>@item.ObjectifName</td>
                            <td>@item.IntituleIn</td>
                            <td>
                                @if (item.CibleAnneeEnCours.HasValue)
                                {
                                    @item.CibleAnneeEnCours.Value.ToString("F2")
                                }
                                else
                                {
                                    <span class="text-muted">N/D</span>
                                }
                            </td>
                            <td>
                                <a asp-action="EditIndicateurStrat" asp-route-id="@item.IdIndic" class="btn btn-warning btn-sm">Modifier</a>
                                <form asp-action="DeleteIndicateurStrat" asp-route-id="@item.IdIndic" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet indicateur ?');">
                                    <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>